<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorAccent" />
                </shape>
            </item>

            <item android:bottom="0.5dp">
                <shape android:shape="rectangle">
                    <solid android:color="#fff" />
                </shape>
            </item>
            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" app:srcCompat="@drawable/ic_down" />

            </item>
        </layer-list>
    </item>
</selector>